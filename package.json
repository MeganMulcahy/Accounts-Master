{
  "name": "privacy-first-account-discovery",
  "version": "1.0.0",
  "description": "Privacy-first desktop app to discover accounts and connected services across multiple platforms",
  "main": "dist/main/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "predev": "npm run build:main",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:main && npm run build:renderer && electron-builder",
    "build:main": "tsc --project tsconfig.main.json",
    "build:renderer": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  }
}
